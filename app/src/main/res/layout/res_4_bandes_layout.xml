<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">


    <LinearLayout
        android:id="@+id/resistor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:scaleX="0.8"
        android:scaleY="0.8">


        <View
            android:layout_width="10sp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10sp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/value1"
            android:layout_width="10sp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="@color/valueBrown"
            android:layout_weight="1" />

        <View
            android:layout_width="10sp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/value2"
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="@color/valueBlack"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/multiplier"
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="@color/valueBrown"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10sp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10sp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:id="@+id/tolerance"
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#FFFF00"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10dp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="10sp"
            android:layout_height="73dp"
            android:layout_gravity="center"
            android:background="#E6BF95"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="100Ω ± 5%" />

    <Button
        android:id="@+id/btn_band4_value1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Button"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="@string/valeur_Resistance" />

    <Button
        android:id="@+id/btn_band4_value2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Button"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="@string/valeur_Resistance" />

    <Button
        android:id="@+id/btn_band4_multiplier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Button"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="@string/multiplicateur_Resistance" />

    <Button
        android:id="@+id/btn_band4_tolerance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Button"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:text="@string/tolerance_Resistance" />


</LinearLayout>